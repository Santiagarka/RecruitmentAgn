@using RecruitmentAgency.Web.Models

@{ 
    var stringSkills = string.Join(", ", Model.Skills.Select(s=>s.Name).ToList());
}

@model VacancyViewModel
 <div class="card">
     <div class="card-header">
         @Model.Name
     </div>
     <div class="card-body">
         <div class="form-group row">
             <label asp-for="Description" class="col-sm-2 col-form-label"></label>
             <div>
                 @Html.DisplayFor(model => model.Description)
             </div>
         </div>
         <div class="form-group row">
             <label asp-for="Term" class="col-sm-2 col-form-label"></label>
             <div>
                 @Html.DisplayFor(model => model.Term)
             </div>
         </div>
         <div class="form-group row">
             <label asp-for="Company" class="col-sm-2 col-form-label"></label>
             <div>
                 @Html.DisplayFor(model => model.Company)
             </div>
         </div>
         <div class="form-group row">
             <label asp-for="Requirements" class="col-sm-2 col-form-label"></label>
             <div>
                 @Html.DisplayFor(model => model.Requirements)
             </div>
         </div>
         <div class="form-group row">
             <label asp-for="Salary" class="col-sm-2 col-form-label"></label>
             <div>
                 @Html.DisplayFor(model => model.Salary)
             </div>
         </div>
         <div class="form-group row">
             <label asp-for="Skills" class="col-sm-2 col-form-label"></label>
             @stringSkills
         </div>
     </div>
</div>